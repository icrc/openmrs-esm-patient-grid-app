{
  "transform": {
    "^.+\\.tsx?$": "@swc/jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!@openmrs)"
  ],
  "moduleNameMapper": {
    "\\.(s?css)$": "identity-obj-proxy",
    "@openmrs/esm-framework": "@openmrs/esm-framework/mock",
    "^lodash-es/(.*)$": "lodash/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/src/setup-tests.ts"
  ],
  "testEnvironment": "jsdom",
  "testEnvironmentOptions": {
    "url": "http://localhost/"
  }
}
